@model CMS.Application.Aggregates.User.Commands.SignIn.SignInCommand;


<h2>Registration</h2>
<div class="tab-content py-4">
    <div class="tab-pane active" id="doctor">
        <div class="col-md-4">
            <form method="post" enctype="multipart/form-data" asp-controller="Account" asp-action="Register">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="form-label" asp-for="FirstName">FirstName</label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="LastName">LastName</label>
                    <input asp-for="LastName" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="Email">Email</label>
                    <input asp-for="Email" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="Location">Location</label>
                    <input asp-for="Location" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="Department">Departament</label>
                    <input asp-for="Department" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="Position">Position</label>
                    <input asp-for="Position" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="Password">Password</label>
                    <input asp-for="Password" class="form-control" type="password"/>
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="ConfirmPassword">PasswordConfirm</label>
                    <input asp-for="ConfirmPassword" class="form-control" type="password"/>
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="Photo">Photo</label>
                    <input asp-for="Photo" class="form-control" type="file" accept="image/*,image/jpeg"/>
                </div>
                <button type="submit" class="btn btn-primary">Register</button>
            </form>
        </div>
    </div>
</div>
