@model CMS.Application.Aggregates.Trainer.Queries.GetTrainer.Trainer
@{
    ViewData["Title"] = "Trainer";
}
<div class="row mb-lg-3">
    <div class="col-md-6">
        <h4>@Model.FirstName @Model.LastName</h4>
    </div>
</div>
<div class="shadow p-3 mb-3 bg-white rounded col-md-6">
    <div class="row">
        <div class="col-md-3">
            @if (Model.Photo != null)
            {
                <img width="100%" height="100%" src="@String.Format("data:image/jpg;base64,{0}", Convert.ToBase64String(Model.Photo))"/>
            }
        </div>
        <div class="col-md-9">
            <p>Description: @Model.Description</p>
        </div>
    </div>
</div>
<a type="button" class="btn btn-outline-dark" asp-controller="Trainer" asp-action="GetModels">Back to list</a>