@model CMS.Application.Aggregates.Trainer.Commands.EditTrainer.EditTrainerCommand;
@{
    ViewData["Title"] = "Update Trainer";
}
<div class="row mb-lg-3">
    <div class="col-md-6">
        <h4>Update Trainer</h4>
    </div>
</div>
<div class="shadow p-3 mb-3 bg-white rounded">
    <form method="post" enctype="multipart/form-data" asp-controller="Trainer" asp-action="UpdateModel" asp-route-id="@ViewBag.Trainer.Id">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-md-4">
            <div class="form-group mb-lg-2">
                <label asp-for="TrainerGroupId">Trainer Group</label><br />
                <select asp-for="TrainerGroupId" class="form-select">
                    @foreach(var group in ViewBag.Group)
                    {
                        <option value="@group.Id">@group.Name</option>
                    }
                </select>
            </div>
            <div class="form-group  mb-lg-2">
                <label asp-for="VisualOrder">Order</label><br />
                <input type="number" class="form-control" asp-for="VisualOrder" value="@ViewBag.Trainer.VisualOrder"/>
            </div>
            <div class="form-group  mb-lg-2">
                <label asp-for="Description">Description</label><br />
                <textarea class="form-control" asp-for="Description"  rows="3">value="@ViewBag.Trainer.Description"</textarea>
            </div>
            <div>
                <button type="submit" class="btn btn-primary mt-1">Update</button>
            </div>
        </div>
    </form>
</div>
<a type="button" class="btn btn-outline-dark" asp-controller="Trainer" asp-action="GetModels">Back to list</a>