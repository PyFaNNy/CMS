@model CMS.Application.Aggregates.User.Queries.GetUser.User
@{
    ViewData["Title"] = "User";
}
<div class="row mb-lg-3">
    <div class="col-md-6">
        <h4>@Model.FirstName @Model.LastName</h4>
    </div>
</div>
<div class="shadow p-3 mb-3 bg-white rounded col-md-6">
    <div class="row">
        <div class="col-md-3">
            <img width="100%" height="100%" src="@String.Format("data:image/jpg;base64,{0}", Convert.ToBase64String(Model.Photo))"/>
        </div>
        <div class="col-md-9">
            <p>Departament: @Model.Department</p>
            <p>Location: @Model.Location</p>
            <p>Position: @Model.Position</p>
            <p>Stare Date: @Model.StartDate.ToString("d")</p>
            <p>Roles:
                @foreach (var role in @Model.Roles)
                {
                    <a class="btn btn-outline-primary">@role.Name</a>
                }
            </p>
        </div>
    </div>
</div>
<a type="button" class="btn btn-outline-dark" asp-controller="User" asp-action="GetModels">Back to list</a>