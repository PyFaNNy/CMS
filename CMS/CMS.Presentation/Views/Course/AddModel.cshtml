@model CMS.Application.Aggregates.Course.Commands.CreateCourse.CreateCourseCommand;
@{
    ViewData["Title"] = "Create Course";
}
<div class="row mb-lg-3">
    <div class="col-md-6">
        <h4>Create Course</h4>
    </div>
</div>
<div class="shadow p-3 mb-3 bg-white rounded">
    <form method="post" enctype="multipart/form-data" asp-controller="Course" asp-action="AddModel">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-md-4">
            <div class="form-group mb-lg-2">
                <label asp-for="Name">Name</label><br />
                <input type="text" class="form-control" asp-for="Name" />
            </div>
            <div class="form-group mb-lg-2">
                <div class="form-check">
                    <input type="checkbox" asp-for="IsNew" class="form-check-input" />
                    <label class="form-check-label">Is New</label>
                </div>
            </div>
            <div class="form-group mb-lg-2">
                <label asp-for="CourseGroupId">Course Group</label><br />
                <select asp-for="CourseGroupId" class="form-select">
                    @foreach(var group in ViewBag.Group)
                    {
                        <option value="@group.Id">@group.Name</option>
                    }
                </select>
            </div>
            <div class="form-group mb-lg-2">
                <label asp-for="CourseTypeId">Course Type</label><br />
                <select asp-for="CourseTypeId" class="form-select">
                    @foreach(var type in ViewBag.Type)
                    {
                        <option value="@type.Id">@type.Name</option>
                    }
                </select>
            </div>
            <div class="form-group  mb-lg-2">
                <label asp-for="VisualOrder">Order</label><br />
                <input type="number" class="form-control" asp-for="VisualOrder" />
            </div>
            <div class="form-group  mb-lg-2">
                <label asp-for="Description">Description</label><br />
                <textarea class="form-control" asp-for="Description"  rows="3"></textarea>
            </div>
            <div>
                <button type="submit" class="btn btn-primary mt-1">Create</button>
            </div>
        </div>
    </form>
</div>
<a type="button" class="btn btn-outline-dark" asp-controller="Course" asp-action="GetModels">Back to list</a>

