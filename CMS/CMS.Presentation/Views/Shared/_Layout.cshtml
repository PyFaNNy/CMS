<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container col-md-9">
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-success"> @User.Identity.Name</a>
                            </li>
                            <li class="nav-item">
                                <form class="form-inline" asp-controller="Account" asp-action="Logout">
                                    <button type="submit" class="nav-link btn btn-link text-primary">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-primary"  asp-controller="Account" asp-action="Register">SingIn</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-primary" asp-controller="Account" asp-action="Login">SingOn</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="row">
        <div class="col-md-2">
            <div class="sidenav">
                <ul class="nav nav-list">
                    <li class="nav-link">
                        <a asp-controller="Course" asp-action="GetModelsUsers">Courses</a>
                    </li>
                    <li class="nav-link">
                        <a asp-controller="TrainerGroup" asp-action="GetModelsUsers">Trainers</a>
                    </li>
                    <hr align="center" width="100%" color="white" />
                    <li class="nav-link">
                        <a asp-controller="Course" asp-action="GetModels">Course List</a>
                    </li>
                    <li class="nav-link">
                        <a asp-controller="CourseGroup" asp-action="GetModels">Course Groups</a>
                    </li>
                    <li class="nav-link">
                        <a asp-controller="Trainer" asp-action="GetModels">Trainers List</a>
                    </li>
                    <li class="nav-link">
                        <a asp-controller="TrainerGroup" asp-action="GetModels">Trainers Groups</a>
                    </li>
                    <li class="nav-link">
                        <a asp-controller="User" asp-action="GetModels">Users</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="col-md-9">
            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
